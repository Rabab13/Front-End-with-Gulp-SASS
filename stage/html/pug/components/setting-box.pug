.setting-box.hide-setting-box
    .toggle-setting
        i.fa.fa-gear.fa-2x
    .setting-content
        .option-box.color-option.text-center
            h4.option-title Color options
            - var themes = ["yellow-theme","purple-theme","orang-theme","green-theme","D-blue-theme","white-theme"]
            ul.list-unstyled
                each theme in themes
                    li(data-theme=theme)
        .option-box.font-option.text-center
            h4.option-title Font options
            - var fonts = ["Dancing","Abril","Merri","Lobster","DM"]
            select.form-select
                each font in fonts
                    option(value=font)=font + " Font"
        .option-box.sidebar-option.text-center
            h4.option-title Sidebar options
